---
import { SEO } from "astro-seo";
import "../style/global.css";

interface Props {
  title: string;
  description: string;
  keywords?: string | string[];
  image?: string;
}

const { title, description, keywords } = Astro.props;
let kWords: string | string[] | undefined = keywords;

if (typeof keywords !== "string" && typeof keywords !== "undefined") {
  kWords = keywords.join(", ");
}
---

<!doctype html>
<html lang="ru">
  <head>
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <SEO
      charset="UTF-8"
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "",
          url: Astro.url.href,
        },
        optional: {
          description: description,
        },
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }], // TODO favicon extension
        // extending the default meta tags

        meta: [{ name: "keywords", content: (kWords as string) || undefined }],
      }}
    />
  </head>
  <body>
    <slot />
    <style is:global>
      /*   Подключаем шрифты тут  */
    </style>
    <!-- Подключаем метрику тут -->
  </body>
</html>
