---
import { AstroContainer, AstroSection } from "#/components/astro";
import { ThemeSwitcher } from "#/components/shadcn/ThemeSwitcher";
import { Seo } from "#/shared/seo";
import { getEntry } from "astro:content";
import YandexMetrika from "../shared/metrika/YandexMetrika.astro";
import "../styles/global.css";
import type { SeoProps } from "#/shared/types";

interface Props {
  title: string;
  description: string;
  keywords?: string | string[];
  image?: string;
  seoData?: SeoProps;
}

const { title, description, keywords, image, seoData } = Astro.props;

const data = await getEntry("seo", "base");
---

<!doctype html>
<html lang="ru" class="scroll-smooth">
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <Seo {...seoData || { ...data?.data, title, description, keywords, image }} />
    <script is:inline>
      const getThemePreference = () => {
        if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });
      }
    </script>
  </head>
  <body>
    <AstroSection>
      <AstroContainer>
        <ThemeSwitcher client:load />
      </AstroContainer>
    </AstroSection>
    <slot />
    <style is:global>
      /*   Подключаем шрифты тут  */
    </style>
    <!-- Подключаем метрику тут -->
    <YandexMetrika />
  </body>
</html>
